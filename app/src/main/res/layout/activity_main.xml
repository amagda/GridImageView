<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.amagda.android.sample.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.amagda.android.sample.GridImageView
            android:id="@+id/rectangle_images_count_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:padding_btw_images="2dp" />

        <com.amagda.android.sample.CircularGridImageView
            android:id="@+id/circular_images_count_1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:padding_btw_images="2dp" />

        <com.amagda.android.sample.GridImageView
            android:id="@+id/rectangle_images_count_2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:padding_btw_images="2dp" />

        <com.amagda.android.sample.CircularGridImageView
            android:id="@+id/circular_images_count_2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:padding_btw_images="2dp" />

        <com.amagda.android.sample.GridImageView
            android:id="@+id/rectangle_images_count_3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:padding_btw_images="2dp" />

        <com.amagda.android.sample.CircularGridImageView
            android:id="@+id/circular_images_count_3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:padding_btw_images="2dp" />

        <com.amagda.android.sample.GridImageView
            android:id="@+id/rectangle_images_count_4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:padding_btw_images="2dp" />

        <com.amagda.android.sample.CircularGridImageView
            android:id="@+id/circular_images_count_4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:padding_btw_images="2dp" />
    </LinearLayout>
</ScrollView>
